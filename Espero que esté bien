#include <stdio.h>
#include <stdlib.h>

int SumaDigitos(int Num){
	int Suma=0, Resto;
	
	while(Num!=0){	
		Resto=(Num%10);
		Suma=(Suma+Resto);
		Num=(Num/10);
	}
	return (Suma);
	
}
	int main(){
		int b;
		
		printf("¿Quiere ver el descuento del libro?\n 1=Sí\n 2=No\n");
		scanf("%d", &b);
		
		do{
		        if (b==2){
			break;}
			int Num;
			printf("Escribe la fecha del libro (*4 díditos*): ");
			scanf("%d",&Num);
			printf("\nEl descuento a aplicar para la fecha (%d) es : %d%%\n",Num,SumaDigitos(Num));
			break;
		
		}
		while(b==1);	
		}
